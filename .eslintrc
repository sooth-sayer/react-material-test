{
  "parser": "babel-eslint",
  "rules": {
    "quotes": [ 1, "single" ],
    "linebreak-style": [ 2, "unix" ],
    "semi": [ 2, "always" ],
    "comma-dangle": [ 2, "always-multiline" ],
    "react/jsx-no-undef": 1
  },

  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "extends": "eslint:recommended",
  "ecmaFeatures": {
    "modules": true,
    "jsx": true,
    "experimentalObjectRestSpread": true
  },
  "plugins": [
    "babel",
    "react"
  ]
}
